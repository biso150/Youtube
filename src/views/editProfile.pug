extends base.pug

block content
  form(method="POST", enctype="multipart/form-data").edit-profile__form
    label(for="avatar") Avatar
    input(type="file", id="avatar", name="avatar", accept="image/*")
    input(type="text", name="name", required, placeholder="Name", value=loggedInUser.name)
    input(type="email", name="email", required, placeholder="Email", value=loggedInUser.email)
    input(type="text", name="username", required, placeholder="Username", value=loggedInUser.username)
    input(type="text", name="location", required, placeholder="Location", value=loggedInUser.location)
    input(type="submit", value="Update Profile")
    if !loggedInUser.githubLoginOnly
      div.edit-profile__password
        a(href="changePassword") Change Password &rarr;