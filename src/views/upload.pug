extends base.pug

block content
  div.upload__container
    div.upload__video
      video#preview
      button#actionBtn.social__btn Start Recording
    if errorMessage
      span=errorMessage
    form(method="POST", enctype="multipart/form-data")
      label(for="video") Video File 
      input(accept="video/*", type="file", required, id="video", name="video")
      label(for="thumb") Thumbmail File 
      input(accept="image/*", type="file", required, id="thumb", name="thumb")
      input(placeholder="Title", required, type="text", name="title", maxlength=80)
      input(placeholder="Description", required, type="text", name="description", minlength=5)
      input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags")
      input(type="submit", value="Upload Video")

  block scripts
    script(src="/assets/js/recorder.js")